#include <iostream>
#include <string>
using namespace std;

int main() {
    string name;
    int score = 0;
    string answer;
    cout<<"Quiz Game";

    cout << "Enter your name: ";
    cin>>(cin, name);

    cout << "Hello, " << name << "! Welcome to the Quiz Game!\n\n";

    // Question 1
    cout << "1. What is the capital of France?\n";
    cout << "a) London\nb) Berlin\nc) Paris\nd) Madrid\n";
    cout << "Your answer: ";
    cin>>(cin, answer);

    if (answer == "c" || answer == "Paris" || answer == "paris") {
        score++;
        cout << "Correct! You got 1 point.\n\n";
    } else {
        cout << "Incorrect! The correct answer is Paris.\n\n";
    }

    // Question 2
    cout << "2. Which of these is a programming language?\n";
    cout << "a) Java\nb) Coffee\nc) Tea\nd) Milk\n";
    cout << "Your answer: ";
    cin>>(cin, answer);

    if (answer == "a" || answer == "Java" || answer == "java") {
        score++;
        cout << "Correct! You got 1 point.\n\n";
    } else {
        cout << "Incorrect! The correct answer is Java.\n\n";
    }

    // Question 3
    cout << "3. What is 2 + 2?\n";
    cout << "a) 3\nb) 4\nc) 5\nd) 6\n";
    cout << "Your answer: ";
    cin>>(cin, answer);

    if (answer == "b" || answer == "4") {
        score++;
        cout << "Correct! You got 1 point.\n\n";
    } else {
        cout << "Incorrect! The correct answer is 4.\n\n";
    }

    // Final score
    cout << "Game Over! Your final score is " << score << " out of 3.\n";

    return 0;
}
